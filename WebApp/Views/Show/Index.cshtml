@model WebApp.Models.PostData
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm("PostForm", "Show", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class="text-danger"})
    <div class="row">
        <div class="col-lg-6">
            @Html.LabelFor(x => x.FirstName)
        </div>
        <div class="col-lg-10">
            @Html.TextBoxFor(x => x.FirstName, new { @class = "col-lg-10" })
            @Html.ValidationMessageFor(x => x.FirstName, "", new { @class="text-danger"})
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            @Html.LabelFor(x => x.LastName)
        </div>
        <div class="col-lg-10">
            @Html.TextBoxFor(x => x.LastName, new { @class = "col-lg-10" })
            @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            @Html.LabelFor(x => x.Login)
        </div>
        <div class="col-lg-10">
            @Html.TextBoxFor(x => x.Login, new { @class = "col-lg-10" })
            @Html.ValidationMessageFor(x => x.Login, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            @Html.LabelFor(x => x.Age)
        </div>
        <div class="col-lg-10">
            @Html.TextBoxFor(x => x.Age, new { @class = "col-lg-10" })
            @Html.ValidationMessageFor(x => x.Age, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            @Html.LabelFor(x => x.Gender)
        </div>
        <div class="col-lg-10">
            @Html.TextBoxFor(x => x.Gender, new { @class = "col-lg-10" })
            @Html.ValidationMessageFor(x => x.Gender , "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            @Html.LabelFor(x => x.Email)
        </div>
        <div class="col-lg-10">
            @Html.TextBoxFor(x => x.Email, new { @class = "col-lg-10" })
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <input type="submit" value="Post form" class="btn btn-default"/>
}

